<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_inner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#fafaff"
    card_view:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    card_view:cardElevation="4dp">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.akshaykale.objecttranslator.utils.ui.TextViewFont
                android:id="@+id/tv_src_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Word"
                android:textSize="18sp"
                app:fontStyle="bold" />

            <com.akshaykale.objecttranslator.utils.ui.TextViewFont
                android:id="@+id/tv_src_lang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="( English )"
                android:textColor="@color/red_light"
                app:fontStyle="light" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <com.akshaykale.objecttranslator.utils.ui.TextViewFont
                android:id="@+id/tv_dest_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Words in Japanese"
                android:textSize="18sp"
                app:fontStyle="bold" />

            <com.akshaykale.objecttranslator.utils.ui.TextViewFont
                android:id="@+id/tv_dest_lang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="( Japanese )"
                android:textColor="@color/red_light"
                app:fontStyle="light" />
        </LinearLayout>

        <com.akshaykale.objecttranslator.utils.ui.TextViewFont
            android:visibility="gone"
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:fontStyle="light"
            android:text="12, March 12:20 PM"
            android:gravity="end"/>

    </LinearLayout>
</android.support.v7.widget.CardView>